//１０日目、１１日目、１２日目

@sys:name(名前アレン)
@sys:name(名前クロエ)
@sys:name(名前わんこ)
@sys:background(h墓)
@sys:bgm(bシリアス)
@sys:live2d(crysfia)
@crysfia:touchoff
